@model IEnumerable<ProjetoFinalTI2.Models.Medico>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <br /><br /><br /><br />
    <h1>Médicos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fotografia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Especialidade)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fotografia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Especialidade)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.MedicoId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.MedicoId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.MedicoId">Delete</a>
    </td>
</tr>}
        </tbody>
    </table>
    </div>